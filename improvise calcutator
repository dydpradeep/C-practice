#include <stdio.h>
#include <stdlib.h>

int main()
{
    double num1;
    double num2;
    char op;
    
    printf("Enter the number: ");
    scanf("%lf",&num1);
    printf("Enter operator: ");
    scanf(" %c",&op); //to run this code u need to give space at %c
    printf("Enter the number: ");
    scanf("%lf",&num2);
    
    if(op == '+'){
        printf("%f",num1+num2);
    } else if(op == '-'){
        printf("%f",num1-num2);
    } else if(op == '/'){
        printf("%f",num1/num2);
    } else if(op == '*'){
        printf("%f",num1*num2);
    } else{
        printf("Invaild operator");
    }

    return 0;
}

Output:-
Enter the number: 23
Enter operator: +
Enter the number: 7
30.000000

